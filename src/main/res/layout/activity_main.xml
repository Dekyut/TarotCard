<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tarotmenu"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cardiwitchImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cardiwitch"
        app:layout_constraintBottom_toTopOf="@+id/redTableImageView"
        app:layout_constraintStart_toStartOf="@+id/redTableImageView"
        app:layout_constraintEnd_toEndOf="@+id/redTableImageView"
        android:layout_marginBottom="-96dp" />

    <ImageView
        android:id="@+id/redTableImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/redtable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-66dp"
        />

    <ImageView
        android:id="@+id/crystalBallImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/crystalball"
        app:layout_constraintBottom_toTopOf="@+id/redTableImageView"
        app:layout_constraintStart_toStartOf="@+id/redTableImageView"
        app:layout_constraintEnd_toEndOf="@+id/redTableImageView"
        android:layout_marginBottom="-66dp" />


    <ImageView
        android:id="@+id/cardImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backcard"
        app:layout_constraintBottom_toTopOf="@+id/redTableImageView"
        app:layout_constraintStart_toStartOf="@+id/redTableImageView"
        app:layout_constraintEnd_toEndOf="@+id/redTableImageView"
        android:layout_marginBottom="-90dp" />

    <ImageView
        android:id="@+id/cardlabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fourslabel"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/redTableImageView"
        app:layout_constraintEnd_toEndOf="@+id/redTableImageView"
        app:layout_constraintStart_toStartOf="@+id/redTableImageView"
        android:layout_marginBottom="-116dp" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backbtn"
        android:background="@null"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/tarotinstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tarotinstructions"
        app:layout_constraintBottom_toTopOf="@+id/redTableImageView"
        app:layout_constraintStart_toStartOf="@+id/redTableImageView"
        app:layout_constraintEnd_toEndOf="@+id/redTableImageView"
        android:layout_marginBottom="-90dp"
        android:onClick="InstructionClicked"/>

    <ImageButton
        android:id="@+id/STARTButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/startbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@null"
        android:layout_marginBottom="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
